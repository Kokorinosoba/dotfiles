#!/usr/bin/env bash

mkfile () {
  [[ -e $1 ]] || touch $1
}

declare -i N=${1:-4}

if [[ $N -gt 26 ]]; then
  echo "Optional number out of range" 1>&2
  exit 1
fi

ext=${2:-cpp}

mkfile sample_input

declare -i i=0
for name in {A..Z}; do
  if [[ $i -eq $N ]]; then
    break
  fi
  mkfile $name.$ext
  i+=1
done
