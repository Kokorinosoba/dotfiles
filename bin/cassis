#!/bin/bash

# C# Compile and Execute Shell
# chmod +x cassisで実行権限を与える
# ./cassisで実行可能

usage_exit() {
  echo "Usage: $0 [-f] file"
  exit 1
}

compile() {
  mcs $1 && mono ${1%.*}.exe
}

force_compile() {
  echo "Recognized option f"
  echo "-------------------"
  compile $1
}

check_compile() {
  # オプション無しなら.exeが存在するか確認して、あるなら.exeのみを実行
  if [[ -f ${1%.*}.exe ]]; then
    echo ".exe already exists"
    echo "-------------------"
    mono ${1%.*}.exe
  # .exeがないならコンパイルと実行を行う
  else
    echo ".exe does not exist"
    echo "-------------------"
    compile $1
  fi
}

while getopts fh OPT
do
  case $OPT in
    # -f オプションを検知したら強制的にコンパイルと実行を行う
    f ) FORCE=1 ;;
    h ) usage_exit ;;
    \? ) usage_exit ;;
  esac
done

shift $((OPTIND - 1))

if [[ -n $FORCE ]]; then
  force_compile $1
else
  check_compile $1
fi
