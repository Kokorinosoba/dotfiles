#!/usr/bin/env bash

# Java Compile and Execute Shell
# chmod +x juiceで実行権限を与える
# ./juiceで実行可能

usage() {
  echo "Usage: ${0##*/} [-f] file"
  exit 1
}

compile() {
  javac ${1%.*}.java && java ${1%.*}
}

force_compile() {
  echo "Recognized option f"
  echo "-------------------"
  compile $1
}

check_compile() {
  # オプション無しなら.classが存在するか確認して、あるなら.classのみを実行
  if [[ -f ${1%.*}.class ]]; then
    echo ".class already exists"
    echo "---------------------"
    java ${1%.*}
  # .classがないならコンパイルと実行を行う
  else
    echo ".class does not exist"
    echo "---------------------"
    compile $1
  fi
}

while getopts fh OPT
do
  case $OPT in
    # -f オプションを検知したら強制的にコンパイルと実行を行う
    f ) FORCE=1 ;;
    h ) usage ;;
    \? ) usage ;;
  esac
done

shift $((OPTIND - 1))

if [[ -n $FORCE ]]; then
  force_compile $1
else
  check_compile $1
fi
