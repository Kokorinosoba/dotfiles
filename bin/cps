#!/bin/bash

usage() {
  echo "Usage: cps <option>"
  echo "Options:"
  echo "    -o                        Set original PS1"
  echo "    -s                        Set simple PS1"
  echo "    -p                        Set powerline PS1"
  echo ""
}

OPTIND=1
getopts osph opt &> /dev/null
case $opt in
  o ) PS1='\h:\W \u\$' ;;
  s ) PS1=' \W \[\033[35m\]$\[\033[0m\]' ;;
  p ) PS1='$(if [[ $? -ne 0 ]]; then echo "\[\e[30;46m\] ! \[\e[36;47m\]î‚°"; fi)\[\e[30;47m\] \w $(git-ps)' ;;
  h ) usage ;;
  \? ) usage ;;
esac

shift $((OPTIND - 1))
