#!/usr/bin/env bash

usage() {
  echo "Usage: cps <option>"
  echo "Options:"
  echo "    -o                        Set original PS1"
  echo "    -s                        Set simple PS1"
  echo "    -b                        Set bob-the-bash PS1"
  echo ""
}

OPTIND=1
getopts osbh opt &> /dev/null
case $opt in
  o ) PS1='\h:\W \u\$' ;;
  s ) PS1=' \W \[\033[35m\]$\[\033[0m\]' ;;
  b ) source $HOME/.bob-the-bash.sh ;;
  h ) usage ;;
  \? ) usage ;;
esac

shift $((OPTIND - 1))
