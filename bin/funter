#!/bin/bash

usage() {
  echo "funter - show/hide hidden files configuration script"
  echo ""
  echo "Usage: ${0##*/} <command>"
  echo ""
  echo "Commands:"
  echo "    on                        set to show hidden files"
  echo "    off                       set to hide hidden files"
  echo "    info                      print status"
  echo "    help                      print help"
  echo ""
  exit 1
}
if [[ $# -ne 1 ]]; then
  usage
fi

case $1 in
  on )
    defaults write com.apple.finder AppleShowAllFiles TRUE
    killall Finder ;;
  off )
    defaults write com.apple.finder AppleShowAllFiles FALSE
    killall Finder ;;
  info )
    if [[ TRUE == $(defaults read com.apple.finder AppleShowAllFiles) ]]; then
      status=on
    else
      status=off
    fi
    echo "status: show hidden files -> $status" ;;
  * )
    usage ;;
esac
